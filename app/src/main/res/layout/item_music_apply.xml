<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.Api17CardView
            app:cardElevation="10dp"
            android:shadowColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_musicApply_card"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp">

        <LinearLayout
                android:id="@+id/item_musicApply_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:orientation="vertical"
                android:background="@color/colorWhite">

            <TextView
                    android:id="@+id/item_musicApply_title_tv"
                    android:textSize="@dimen/text_size_24"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/nanumsquareextrabold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/item_musicApply_explanation_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareregular"
                    android:textSize="@dimen/typo_subtitle"
                    android:textColor="@color/colorGray600"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="10sp"
                    android:layout_marginTop="20dp"/>
        </LinearLayout>
    </android.support.v7.widget.Api17CardView>

    <TextView
            android:id="@+id/item_musicApply_count_tv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:fontFamily="@font/nanumsquareextrabold"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:background="@drawable/radius_circle_primary"
            app:layout_constraintEnd_toEndOf="@id/item_musicApply_card"
            app:layout_constraintTop_toTopOf="@id/item_musicApply_card"/>
</android.support.constraint.ConstraintLayout>