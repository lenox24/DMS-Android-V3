<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Api17CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:shadowColor="@color/colorPrimary"
        app:cardCornerRadius="16dp"
        android:id="@+id/musicApply_log_card"
        android:background="@color/layout_back_color">
    <LinearLayout
            android:id="@+id/musicApply_log_card_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">
        <TextView
                android:id="@+id/musicApply_log_card_music_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray700"
                android:textSize="@dimen/typo_header"
                android:fontFamily="@font/nanumsquarebold"
                android:text="@string/music_apply_log_music"/>

        <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/musicApply_log_card_artist_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorGray600"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="2sp"
                android:text="@string/music_apply_log_artist"/>

        <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/musicApply_log_card_student_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#9e9e9e"
                android:lineSpacingExtra="1sp"
                android:text="@string/music_apply_log_student"/>

    </LinearLayout>

</android.support.v7.widget.Api17CardView>