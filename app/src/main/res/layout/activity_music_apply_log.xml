<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="vm"
                type="dsm.android.v3.ui.musicApplyLog.MusicApplyLogViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/layout_back_color">

        <android.support.design.widget.AppBarLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:theme="@style/AppTheme.AppBarOverlay"
                android:id="@+id/appBarLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <android.support.v7.widget.Toolbar
                    android:id="@+id/musicApply_log_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:onClick="@{()->vm.musicApplyLogClickBack()}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/round_arrow_back_24_px"/>

                    <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:lineSpacingExtra="2sp"
                            android:text="@string/apply_music_log_title"
                            android:textSize="@dimen/text_size_16"
                            android:fontFamily="@font/nanumsquarebold"
                            android:textColor="@color/colorWhite"/>
                </LinearLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.constraint.ConstraintLayout
                android:id="@+id/musicApply_log_explanation_lay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appBarLayout"
                android:paddingHorizontal="16dp"
                android:paddingBottom="28dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0">

            <TextView
                    android:id="@+id/musicApply_log_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@={vm.logTitle}"
                    android:textSize="@dimen/text_size_24"
                    android:fontFamily="@font/nanumsquareextrabold"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="36dp"/>

            <TextView
                    android:id="@+id/applyGoing_explanation_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray600"
                    android:textSize="@dimen/typo_subtitle"
                    android:text="@{vm.logTitle}"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/nanumsquareregular"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/musicApply_log_title_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginStart="16dp"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
                android:layout_marginHorizontal="16dp"
                android:id="@+id/musicApply_apply_record_rv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/musicApply_log_explanation_lay"
                app:layout_constraintBottom_toBottomOf="parent">

        </android.support.v7.widget.RecyclerView>

        <Button
                android:onClick="@{()->vm.musicApplyClickDelete()}"
                android:id="@+id/applyGoing_apply_delete_btn"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/radius_view_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:text="@string/musicApply_log_delete_btn"
                android:textSize="@dimen/typo_header"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/nanumsquareregular"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/appBarLayout"
                app:layout_constraintVertical_bias="1.0"/>

    </android.support.constraint.ConstraintLayout>

</layout>